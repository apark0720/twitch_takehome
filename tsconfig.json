{
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "jsx": "react",
    "lib": ["dom", "es2016"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "tsc",
    "paths": {
      "ventura/*": ["source/*"],
    },
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es5",
    "types": ["jest"]
  },
  "include": [
    "source/**/*",
    "ventura/globals/images.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}